											2|[local::at0026],
											3|[local::at0027],
											4|[local::at0028]
										}
									}
									ELEMENT[at0029] occurrences matches {0..1} matches {    -- 5. Activities - shoes, socks
										value matches {
											1|[local::at0030],
											2|[local::at0031],
											3|[local::at0032]
										}
									}
									ELEMENT[at0033] occurrences matches {0..1} matches {    -- 6. Stairs
										value matches {
											1|[local::at0034],
											2|[local::at0035],
											3|[local::at0036],
											4|[local::at0037]
										}
									}
									ELEMENT[at0038] occurrences matches {0..1} matches {    -- 7. Public transportation
										value matches {
											1|[local::at0039],
											2|[local::at0040]
										}
									}
									ELEMENT[at0041] occurrences matches {0..1} matches {    -- 8. Sitting
										value matches {
											1|[local::at0042],
											2|[local::at0043],
											3|[local::at0044]
										}
									}
									ELEMENT[at0048] occurrences matches {0..1} matches {    -- 9. Absence of deformity
										value matches {
											1|[local::at0049],
											2|[local::at0050]
										}
									}
									ELEMENT[at0052] occurrences matches {0..1} matches {    -- 10. Total degrees of flexion
										value matches {
											1|[local::at0053],
											2|[local::at0054],
											3|[local::at0055],
											4|[local::at0056],
											5|[local::at0057],
											6|[local::at0058],
											7|[local::at0059],
											8|[local::at0060],
											9|[local::at0061],
											10|[local::at0062],
											11|[local::at0063],
											12|[local::at0064],
											13|[local::at0065],
											14|[local::at0066],
											15|[local::at0067]
										}
									}
									ELEMENT[at0068] occurrences matches {0..1} matches {    -- 11. Total degrees of abduction
										value matches {
											1|[local::at0069],
											2|[local::at0070],
											3|[local::at0071],
											4|[local::at0072],
											5|[local::at0073]
										}
									}
									ELEMENT[at0074] occurrences matches {0..1} matches {    -- 12. Total degrees of external rotation
										value matches {
											1|[local::at0075],
											2|[local::at0076],
											3|[local::at0077],
											4|[local::at0078]
										}
									}
									ELEMENT[at0079] occurrences matches {0..1} matches {    -- 13. Total degrees of adduction
										value matches {
											1|[local::at0080],
											2|[local::at0081],
											3|[local::at0082],
											4|[local::at0083]
										}
									}
									ELEMENT[at0085] occurrences matches {0..1} matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..100|}
											}
										}
									}
									ELEMENT[at0086] occurrences matches {0..1} matches {    -- Grading
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0087,    -- Poor
													at0088,    -- Fair
													at0089,    -- Good
													at0090]    -- Excellent
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0047] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0084] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}


